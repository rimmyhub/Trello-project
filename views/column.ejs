<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="column.css" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.14.0/Sortable.min.js"></script>
    <script src="/js/column.js" defer></script>
    <link rel="stylesheet" href="/css/column.css" />
    <title>Trello Board</title>
  </head>

  <body>
    <%- include('includes/header') %>
    <!-- 보드 영역 -->
    <div class="board">
      <div class="row">
        <div class="column" id="column-todo">
          <h2>할 일</h2>
          <ul class="sortable-list" id="sortable-todo">
            <li class="sortable-item">할 일 1</li>
            <li class="sortable-item">할 일 2</li>
          </ul>
        </div>
        <div class="column" id="column-inProgress">
          <h2>진행 중</h2>
          <ul class="sortable-list" id="sortable-inProgress">
            <li class="sortable-item">진행 중 1</li>
          </ul>
        </div>
        <div class="column" id="column-done">
          <h2>완료</h2>
          <ul class="sortable-list" id="sortable-done">
            <li class="sortable-item">완료 1</li>
          </ul>
        </div>
      </div>
    </div>
    <%- include('includes/footer') %>
  </body>
</html>
